@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}
<h2>Blog Lists</h2>

@* <span>@Model.Count</span> *@

<a href="/Blog/Create" class="btn btn-success">New</a>

<div>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>Author</th>
                <th>Content</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BlogModel item in Model)
            {
                <tr>
                    <td>@(++count)</td>
                    <td>@item.BlogTitle</td>
                    <td>@item.BlogAuthor</td>
                    <td>@item.BlogContent</td>
                    <td>
                        <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">
                            Edit
                        </a>
                        <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>